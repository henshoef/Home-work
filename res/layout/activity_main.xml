<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hensh.buttonmatrix.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Border"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Border"
                android:textSize="10dp"
                android:background="@drawable/buttonsripple"/>

            <Button
                android:id="@+id/Diagonal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Diagonal"
                android:textSize="10dp"
                android:background="@drawable/buttonsripple"/>

            <Button
                android:id="@+id/UpperTriangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/UpperTriangle"
                android:textSize="10dp"
                android:background="@drawable/buttonsripple"/>

            <Button
                android:id="@+id/UnderTrinagle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/UnderTrinagle"
                android:textSize="10dp"
                android:background="@drawable/buttonsripple"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/MatrixLO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
